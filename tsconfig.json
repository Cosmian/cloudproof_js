{
  "compilerOptions": {
    "target": "ES2020",
    "noEmit": true,
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "es2020"],
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "**/__tests__/*", "examples"]
}
